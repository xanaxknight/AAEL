{%- comment -%}
  AAEL 404 Page
  Page not found template
{%- endcomment -%}

<section class="not-found section">
  <div class="not-found__inner grid">
    <div class="not-found__content col-2 col-mobile-full">
      <h1 class="not-found__title">{{ '404.title' | t }}</h1>
      <p class="not-found__text">{{ '404.subtext' | t }}</p>
      <a href="{{ routes.root_url }}" class="not-found__link btn btn--secondary">
        {{ '404.link' | t }}
      </a>
    </div>
  </div>
</section>

<style>
  .not-found {
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .not-found__inner {
    width: 100%;
  }

  .not-found__title {
    font-size: var(--text-2xl);
    font-weight: 400;
    margin-bottom: var(--space-3);
  }

  .not-found__text {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5);
  }
</style>

{% schema %}
{
  "name": "404 Page",
  "settings": []
}
{% endschema %}

