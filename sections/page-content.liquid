{%- liquid
  assign padding_top = section.settings.padding_top | default: 80
  assign padding_bottom = section.settings.padding_bottom | default: 80
  assign max_width = section.settings.max_width | default: 800
-%}

<div class="page-content-wrapper" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <div class="grid-container">
    <div 
      class="grid-block"
      style="
        --span-s: span 2;
        --start-s: 1;
        --align-s: flex-start;
        --text-s: left;
        --span-m: span 4;
        --start-m: 1;
        --align-m: flex-start;
        --text-m: left;
        --span-l: span 4;
        --start-l: 2;
        --align-l: flex-start;
        --text-l: left;
        --span-xl: span 4;
        --start-xl: 3;
        --align-xl: flex-start;
        --text-xl: left;
      "
    >
      <div class="page-content-inner" style="max-width: {{ max_width }}px; width: 100%; padding: 0 24px;">
        {%- if section.settings.show_title -%}
          <h1 class="page-title" style="font-size: 42px; font-weight: 500; letter-spacing: 0.02em; margin-bottom: 32px;">
            {{ page.title }}
          </h1>
        {%- endif -%}
        
        <div class="page-content rte" style="font-size: 16px; line-height: 1.6; letter-spacing: 0.01em;">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .rte {
    color: var(--fg);
  }
  
  .rte h1, .rte h2, .rte h3, .rte h4, .rte h5, .rte h6 {
    font-weight: 500;
    margin-top: 2em;
    margin-bottom: 0.75em;
    letter-spacing: 0.02em;
  }
  
  .rte h2 { font-size: 32px; }
  .rte h3 { font-size: 24px; }
  .rte h4 { font-size: 20px; }
  
  .rte p {
    margin-bottom: 1.5em;
  }
  
  .rte a {
    text-decoration: underline;
    opacity: 0.8;
    transition: opacity 0.2s;
  }
  
  .rte a:hover {
    opacity: 1;
  }
  
  .rte ul, .rte ol {
    margin-bottom: 1.5em;
    padding-left: 1.5em;
  }
  
  .rte li {
    margin-bottom: 0.5em;
  }
  
  .rte img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 2em 0;
    border-radius: 1.125rem;
  }
  
  .rte blockquote {
    border-left: 3px solid var(--fg);
    padding-left: 1.5em;
    margin: 2em 0;
    opacity: 0.8;
    font-style: italic;
  }
  
  .rte code {
    background: var(--gray-bg);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
  }
  
  .rte pre {
    background: var(--gray-bg);
    padding: 1.5em;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2em 0;
  }
  
  .rte pre code {
    background: none;
    padding: 0;
  }
</style>

{% schema %}
{
  "name": "Page Content",
  "tag": "section",
  "class": "section-page-content",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "default": 800,
      "unit": "px",
      "label": "Content max width"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 8,
      "default": 80,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 8,
      "default": 80,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "Page Content"
    }
  ]
}
{% endschema %}
