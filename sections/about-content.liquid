{%- liquid
  assign padding_top = section.settings.padding_top | default: 120
  assign padding_bottom = section.settings.padding_bottom | default: 160
  assign max_width = section.settings.max_width | default: 1000
  assign paragraph_1 = section.settings.paragraph_1 | default: 'AAEL creates authored objects and spatial elements for interior space.'
  assign paragraph_2 = section.settings.paragraph_2 | default: 'The work exists through limited series and drops, allowing ideas to develop. Honest materials guide the practice, keeping decisions clear. Form, function, and structure are developed together, without hierarchy.'
  assign paragraph_3 = section.settings.paragraph_3 | default: 'These objects act as points of presence within a space, with subtle shifts built in to support continuity.'
  assign email = section.settings.email | default: 'HI@AAEL24.COM'
-%}

<div class="about-content-wrapper" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <div class="grid-container">
    <div 
      class="grid-block"
      style="
        --span-s: span 2;
        --align-s: center;
        --text-s: center;
        --span-m: span 4;
        --align-m: center;
        --text-m: center;
        --span-l: span 6;
        --align-l: center;
        --text-l: center;
        --span-xl: span 6;
        --start-xl: 2;
        --align-xl: center;
        --text-xl: center;
      "
    >
      <div class="about-content-inner" style="max-width: {{ max_width }}px; margin: 0 auto; padding: 0 40px;">
        
        {%- if paragraph_1 != blank -%}
          <p class="about-paragraph about-paragraph-1">
            {{ paragraph_1 }}
          </p>
        {%- endif -%}

        {%- if paragraph_2 != blank -%}
          <p class="about-paragraph about-paragraph-2">
            {{ paragraph_2 }}
          </p>
        {%- endif -%}

        {%- if paragraph_3 != blank -%}
          <p class="about-paragraph about-paragraph-3">
            {{ paragraph_3 }}
          </p>
        {%- endif -%}

        {%- if email != blank -%}
          <div class="about-contact">
            <a href="mailto:{{ email }}" class="about-email">
              {{ email }}
            </a>
          </div>
        {%- endif -%}

      </div>
    </div>
  </div>
</div>

<style>
  .about-paragraph {
    font-size: 32px;
    line-height: 1.5;
    letter-spacing: 0.01em;
    color: var(--fg);
    margin: 0;
    font-weight: 400;
  }

  .about-paragraph-1 {
    margin-bottom: 60px;
  }

  .about-paragraph-2 {
    margin-bottom: 60px;
  }

  .about-paragraph-3 {
    margin-bottom: 80px;
  }

  .about-contact {
    margin-top: 80px;
  }

  .about-email {
    font-size: 16px;
    letter-spacing: 0.08em;
    color: var(--fg);
    text-decoration: none;
    transition: opacity 0.2s;
    font-weight: 400;
  }

  .about-email:hover {
    opacity: 0.6;
  }

  @media (max-width: 1024px) {
    .about-paragraph {
      font-size: 28px;
    }
  }

  @media (max-width: 768px) {
    .about-content-inner {
      padding: 0 24px !important;
    }

    .about-paragraph {
      font-size: 20px !important;
      line-height: 1.6;
    }

    .about-paragraph-1 {
      margin-bottom: 40px;
    }

    .about-paragraph-2 {
      margin-bottom: 40px;
    }

    .about-paragraph-3 {
      margin-bottom: 60px;
    }
    
    .about-email {
      font-size: 14px !important;
    }
  }
</style>

{% schema %}
{
  "name": "About Content",
  "tag": "section",
  "class": "section-about-content",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "Paragraph 1",
      "default": "AAEL creates authored objects and spatial elements for interior space."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Paragraph 2",
      "default": "The work exists through limited series and drops, allowing ideas to develop. Honest materials guide the practice, keeping decisions clear. Form, function, and structure are developed together, without hierarchy."
    },
    {
      "type": "textarea",
      "id": "paragraph_3",
      "label": "Paragraph 3",
      "default": "These objects act as points of presence within a space, with subtle shifts built in to support continuity."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact email",
      "default": "HI@AAEL24.COM"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "default": 1000,
      "unit": "px",
      "label": "Content max width"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 300,
      "step": 8,
      "default": 120,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 300,
      "step": 8,
      "default": 160,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "About Content"
    }
  ]
}
{% endschema %}
